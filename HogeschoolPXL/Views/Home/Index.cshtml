@model HogeschoolPXL.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="searchQuery" class="control-label">Zoek student op naam</label>
        <input asp-for="searchQuery" class="form-control" />
