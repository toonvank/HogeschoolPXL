@{
}
@model IdentityViewModel
@if (Model.Roles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>RoleName</th>
            </tr>
        </thead>
        @foreach (var role in @Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </table>
    <br />
    <table class="table table-sm table-bordered table-bordered">
        <thead>
            <tr>
                <th>RoleGroups</th>
            </tr>
        </thead>
        <tr><th>ID</th><th>Name</th><th>Users</th></tr>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td id="roleName">@role.Name</td>
                <td role="@role.Id"></td>
                <td><select id="roleSelect" class="form-control" asp-items="ViewBag.RoleId"></select></td>
                <td><a class="btn btn-primary" asp-controller="Account" asp-action="UserClaim('@role.Id')">Update</a></td>
            </tr>
        }
    </table>
    <table>
        <thead>
            <tr>
                <th>UserRoles</th>
            </tr>
        </thead>
        <tr><th>ID</th><th>Name</th><th>Role</th></tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td><select id="roleSelect" class="form-control" asp-items="ViewBag.RoleId"></select></td>
            </tr>
        }
    </table>
    <script>
    var select = document.getElementById("roleSelect");
    var roleName = document.getElementById("roleName").innerHTML;
    for (var i = 0; i < select.options.length; i++) {
        if (select.options[i].value == roleName) {
            select.selectedIndex = i;
                console.log(select.options[i].value);
            break;
        }
    }                    
    </script>
}