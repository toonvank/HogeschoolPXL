@{
}
@model IdentityViewModel
@if (Model.Roles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>RoleName</th>
            </tr>
        </thead>
        @foreach (var role in @Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </table>
    <br />
    <table class="table table-sm table-bordered table-bordered">
        <tr><th>ID</th><th>Name</th><th>Users</th></tr>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td role="@role.Id"></td>
            </tr>
        }
    </table>
}