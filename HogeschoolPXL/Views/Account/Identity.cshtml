@{
}
@model IdentityViewModel
@if (Model.Roles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>RoleName</th>
            </tr>
        </thead>
        @foreach (var role in @Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </table>
    <br />
    <table class="table table-sm table-bordered table-bordered">
        <thead>
            <tr>
                <th>RoleGroups</th>
            </tr>
        </thead>
        <tr><th>ID</th><th>Name</th><th>Users</th></tr>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td role="@role.Id"></td>
            </tr>
        }
    </table>
    <table>
        <thead>
            <tr>
                <th>UserRoles</th>
            </tr>
        </thead>
        <tr><th>ID</th><th>Name</th><th>Change Role</th></tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td style="visibility:hidden;" id="roleName" user-role="@user"></td>
                <td><select id="roleSelect" class="form-control" asp-items="ViewBag.RoleId"></select></td>
                <td><a class="btn btn-primary" asp-controller="Account" asp-action="ChangeUserRole" asp-route-user="@user">Update</a></td>
                //find a way to pass user to controller
                // find a way to pass selected index on select roleselect to controller
            </tr>
        }
    </table>
    <script>
    var select = document.querySelectorAll("#roleSelect");
    var roleName = document.querySelectorAll("#roleName");
    for (var j = 0; j < select.length; j++) {
        for (var i = 0; i < select[j].options.length; i++) {
            if (select[j].options[i].value == roleName[j].innerHTML)  {
                select[j].selectedIndex = i;
                break;
            }
        }
    }                
    </script>
}